@model IEnumerable<ABC.Models.Taikhoan>
@{
    ViewData["Title"] = "Quản lý người dùng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Danh sách người dùng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <a class="btn btn-primary" asp-action="Create">
                            <i class='bx bx-plus'></i> Thêm người dùng
                        </a>
                    </div>
                    
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Tên tài khoản</th>
                                    <th>Quyền</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.MaTk</td>
                                        <td>@item.TaiKhoan</td>
                                        <td>@item.MaQuyenNavigation?.TenQuyen</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.MaTk" class="btn btn-sm btn-warning">
                                                <i class='bx bx-edit'></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.MaTk" class="btn btn-sm btn-danger">
                                                <i class='bx bx-trash'></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
