@model ABC.Models.Taikhoan
@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">Chỉnh sửa người dùng</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MaTk" />
                        
                        <div class="mb-3">
                            <label asp-for="TaiKhoan" class="form-label">Tên tài khoản</label>
                            <input asp-for="TaiKhoan" class="form-control" />
                            <span asp-validation-for="TaiKhoan" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MatKhau" class="form-label">Mật khẩu</label>
                            <input asp-for="MatKhau" class="form-control" type="password" />
                            <span asp-validation-for="MatKhau" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="MaQuyen" class="form-label">Quyền</label>
                            <select asp-for="MaQuyen" class="form-select">
                                @foreach (var role in ViewBag.Roles)
                                {
                                    <option value="@role.MaQuyen">@role.TenQuyen</option>
                                }
                            </select>
                            <span asp-validation-for="MaQuyen" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary">Trở về danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
